<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add" />

	<TextView android:id="@+id/tvNumber" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:gravity="center" android:paddingLeft="5dip"
		android:layout_weight="0.3"/>
	<TextView android:id="@+id/tvName" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:gravity="center" android:paddingLeft="20dip" android:paddingBottom="2dp"
		android:layout_weight="0.25"/>
	<TextView android:id="@+id/tvAddress" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:gravity="center" android:paddingLeft="20dip"
		android:layout_weight="0.2"/>
	<TextView android:id="@+id/tvPhone" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:gravity="center" android:paddingLeft="20dip"
		android:layout_weight="0.25"/>
</LinearLayout>